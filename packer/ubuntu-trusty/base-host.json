{
  "variables": {
    "vpc_id": "",
    "subnet_id": "",
    "source_ami": "",
    "instance_type": "",
    "description": "",
    "os_version": "",
    "os_release": "",
    "build_id": "",
    "ami_name": "base-host",
    "region": "us-west-1",
    "copy_to_a": "us-east-1",
    "copy_to_b": "us-west-2"
  },
  "builders": [ {
      "type": "amazon-ebs",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.small",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "region": "{{user `region`}}",
      "ami_name": "{{user `ami_name`}}-{{ isotime | clean_ami_name }}",
      "ami_regions": ["{{user `copy_to_a` }}", "{{user `copy_to_b` }}"],
      "ssh_username": "ubuntu",
      "tags": {
	  "Name": "{{user `ami_name`}}",
	  "Time_Stamp": "{{ isotime | clean_ami_name }}",
          "Desc": "{{user `description` }}",
          "OS_Version": "{{user `os_version` }}",
          "Release": "{{user `os_release` }}",
          "Build_ID": "{{user `build_id` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "uploads/",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "execute_command": "sudo -H -S sh '{{.Path}}'",
        "scripts": [
          "scripts/root-ssh-setup.sh",
          "scripts/base.sh",
          "scripts/bootstrap-salt.sh",
          "scripts/run-highstate.sh",
          "scripts/cleanup.sh"
        ]
    }
  ]
}
