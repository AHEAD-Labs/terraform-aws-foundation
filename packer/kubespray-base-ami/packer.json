{ "variables": {
    "ssh_keypair_name": "Packer-Kubespray-Builder",
    "aws_region": "us-east-1",
    "aws_virtualization_type": "hvm",
    "ami_image_name_regex": "CoreOS-stable-*-hvm-*",
    "ami_owner": "679593333241",
    "aws_instance_type": "m3.medium",
    "ssh_private_key_file_path": "id_rsa"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{ user `aws_region` }}",
    "ami_virtualization_type": "{{ user `aws_virtualization_type` }}",
    "source_ami_filter": {
        "filters": {
          "virtualization-type": "{{ user `aws_virtualization_type` }}",
          "name": "{{ user `ami_image_name_regex` }}",
          "root-device-type": "ebs"
        },
        "owners": ["{{ user `ami_owner` }}"],
        "most_recent": true
    },
    "instance_type": "{{ user `aws_instance_type` }}",
    "ssh_username": "core",
    "ami_name": "packer-kube-base-{{timestamp}}",
    "ssh_keypair_name": "{{ user `ssh_keypair_name` }}",
    "ssh_private_key_file": "{{ user `ssh_private_key_file_path` }}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": ".",
      "destination": "/tmp/kube-packer-base-image-temp"
    },
    {
      "type": "shell",
      "inline": [
        "docker pull fpco/kubespray"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "docker run --privileged --net=host --rm \\",
        "-v /tmp/kube-packer-base-image-temp/vars.yml:/opt/kubespray/vars.yml \\",
        "-v /tmp/kube-packer-base-image-temp/id_rsa:/tmp/id_rsa \\",
        "-v /var/run/docker.sock:/var/run/docker.sock \\",
        "-v /usr/bin/docker:/usr/bin/docker \\",
        "-v /run/metadata:/run/metadata \\",
        "-v /run/torcx:/run/torcx \\",
        "-v /tmp/releases:/tmp/releases \\",
        "-e ANSIBLE_HOST_KEY_CHECKING=False \\",
        "-e PYTHONUNBUFFERED=True fpco/kubespray \\",
        "ansible-playbook \\",
        "-u core -b -i inventory/localhost \\",
        "--extra-vars=\"@vars.yml\" \\",
        "--ssh-extra-args=\"-i /tmp/id_rsa\" \\",
        "--tags=\"bootstrap-os,adduser,download\" \\",
        "cluster.yml"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf /tmp/kube-packer-base-image-temp",
        "cd /home/core/.ssh && rm authorized_keys"
      ]
    }
  ]
}

